{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",  // Node.js için "commonjs" daha uygundur
    "moduleResolution": "node",  // Node.js modül çözümleme
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": ".",  // Bu ayar projenizin kök dizinine göre yapılır
    "paths": {
      "@/*": ["./src/*"]  // Eğer @ kullanıyorsanız, bu ayar doğru
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/styles/global.css"
  ],
  "exclude": [
    "node_modules/*",
    ".next",
    "out",
    "build",
    "dist",
    "supabase"
  ]
}
